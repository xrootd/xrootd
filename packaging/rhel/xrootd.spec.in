Name:      xrootd
Version:   __VERSION__
Release:   1%{?dist}
Summary:   An eXtended Root Daemon (xrootd)
Group:     System Environment/Daemons
License:   Stanford (modified BSD with advert clause)
URL:       http://xrootd.org/
Source0:   xrootd.tar.gz
Source1:   xrootd.sysconfig
Source2:   cmsd.init
Source3:   frm_purged.init
Source4:   frm_xfrd.init
Source5:   xrootd.init
Source6:   xrootd.functions
Source7:   xrootd-main.cf
Source8:   cmsd-main.cf
Source9:   frmd-main.cf
BuildRoot: %(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)

BuildRequires: autoconf automake libtool readline-devel openssl-devel fuse-devel libxml2-devel

%description
%{summary}

%package devel
Summary: Headers for compiling and linking against xrootd
Group:   System Environment/Libraries
Requires: %{name}-libs = %{version}-%{release}
Requires: %{name}-client = %{version}-%{release}
Requires: %{name}-server = %{version}-%{release}
Requires: %{name}-fuse = %{version}-%{release}
%description devel
Headers for compiling and linking against xrootd

%package client
Summary: XRootD client
Group:   System Environment/Applications
Requires: %{name}-libs = %{version}-%{release}
%description client
Headers for compiling and linking against xrootd

%package fuse
Summary: XRootD filesystem
Group:   System Environment/Filesystems
Requires: %{name}-client = %{version}-%{release}
%description fuse
Headers for compiling and linking against xrootd

%package server
Summary: XRootD server
Group:   System Environment/Daemons
Requires: %{name}-libs = %{version}-%{release}, %{name}-client = %{version}-%{release}
Requires: %{name}-fuse = %{version}-%{release}
%description server
XRootD server

%package libs
Summary: XRootD core libraries
Group:   System Environment/Libraries
%description libs
XRootD core libraries

%prep
%setup -c -n %{name}
cd %{name}
./bootstrap.sh

%build
cd %{name}
%configure --enable-gsi --enable-fuse --enable-dbg-build --with-utils-dir=%{_datadir}/%{name}/utils
make %{?_smp_mflags}

%install
cd %{name}
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

rm -f $RPM_BUILD_ROOT%{_libdir}/*.la
rm -f $RPM_BUILD_ROOT%{_libdir}/*.a

# configuration stuff
mkdir -p $RPM_BUILD_ROOT%{_datadir}/%{name}/scripts
mv $RPM_BUILD_ROOT%{_sysconfdir}/%{name}/* $RPM_BUILD_ROOT%{_datadir}/%{name}/scripts

# var paths
mkdir -p $RPM_BUILD_ROOT%{_var}/log/%{name}
mkdir -p $RPM_BUILD_ROOT%{_var}/run/%{name}

# init stuff
mkdir -p $RPM_BUILD_ROOT%{_sysconfdir}/sysconfig
mkdir -p $RPM_BUILD_ROOT%{_initrddir}
install -m 644 %{SOURCE1} $RPM_BUILD_ROOT%{_sysconfdir}/sysconfig/%{name}
install -m 755 %{SOURCE2} $RPM_BUILD_ROOT%{_initrddir}/cmsd
install -m 755 %{SOURCE3} $RPM_BUILD_ROOT%{_initrddir}/frm_purged
install -m 755 %{SOURCE4} $RPM_BUILD_ROOT%{_initrddir}/frm_xfrd
install -m 755 %{SOURCE5} $RPM_BUILD_ROOT%{_initrddir}/xrootd
install -m 755 %{SOURCE6} $RPM_BUILD_ROOT%{_initrddir}/xrootd.functions
install -m 644 %{SOURCE7} $RPM_BUILD_ROOT%{_sysconfdir}/%{name}/xrootd-main.cf
install -m 644 %{SOURCE8} $RPM_BUILD_ROOT%{_sysconfdir}/%{name}/cmsd-main.cf
install -m 644 %{SOURCE9} $RPM_BUILD_ROOT%{_sysconfdir}/%{name}/frmd-main.cf

%clean
rm -rf $RPM_BUILD_ROOT

%post
/sbin/chkconfig --add xrootd
/sbin/chkconfig --add cmsd
/sbin/chkconfig --add frm_purged
/sbin/chkconfig --add frm_xfrd

%preun
if [ "$1" = "0" ]; then
    /sbin/chkconfig --del xrootd
    /sbin/chkconfig --del cmsd
    /sbin/chkconfig --del frm_purged
    /sbin/chkconfig --del frm_xfrd
fi

%postun
if [ "$1" -ge "1" ] ; then
    /sbin/service xrootd condrestart >/dev/null 2>&1 || :
    /sbin/service cmsd condrestart >/dev/null 2>&1 || :
    /sbin/service frm_purged condrestart >/dev/null 2>&1 || :
    /sbin/service frm_xfrd condrestart >/dev/null 2>&1 || :
fi

%files libs
%defattr(-,root,root,-)
%{_libdir}/libXrdSec*.so*
%{_libdir}/libXrdCrypto*.so*
%{_libdir}/libXrdSut.so*
%{_libdir}/libXrdNet*.so*
%{_libdir}/libXrdOuc.so*
%{_libdir}/libXrdSys.so*

%files devel
%defattr(-,root,root,-)
%{_includedir}/%{name}

%files client
%defattr(-,root,root,-)
%{_libdir}/libXrdClient*.so*
%{_libdir}/libXrdPosix.so*
%{_libdir}/XrdClientAdmin.pm
%{_bindir}/xprep
%{_bindir}/xrd
%{_bindir}/xrdcp
%{_bindir}/xrdgsiproxy
%{_bindir}/xrdstagetool
%doc %{_mandir}/man1

%files fuse
%defattr(-,root,root,-)
%{_bindir}/xrootdfs
%{_libdir}/libXrdFfs.so
%{_libdir}/libXrdFfs.so.0
%{_libdir}/libXrdFfs.so.0.0.0

%files server
%defattr(-,root,root,-)
%{_libdir}/libXrdPss*.so*
%{_bindir}/cconfig
%{_bindir}/cmsd
%{_bindir}/cns_ssi
%{_bindir}/frm_admin
%{_bindir}/frm_purged
%{_bindir}/frm_xfragent
%{_bindir}/frm_xfrd
%{_bindir}/mpxstats
%{_bindir}/wait41
%{_bindir}/xrdadler32
%{_bindir}/XrdCnsd
%{_bindir}/xrdpwdadmin
%{_bindir}/xrdsssadmin
%{_bindir}/xrootd
%{_libdir}/libXrdAcc.so*
%{_libdir}/libXrdBwm.so*
%{_libdir}/libXrdCms.so*
%{_libdir}/libXrdOfs.so*
%{_libdir}/libXrdOss.so*
%{_libdir}/libXrdRootd.so*
%{_libdir}/libXrd.so*
%config(noreplace) %{_sysconfdir}/%{name}/xrootd-main.cf
%config(noreplace) %{_sysconfdir}/%{name}/cmsd-main.cf
%config(noreplace) %{_sysconfdir}/%{name}/frmd-main.cf
%attr(-,daemon,daemon) %dir %{_var}/log/%{name}
%attr(-,daemon,daemon) %dir %{_var}/run/%{name}
%{_datadir}/%{name}/scripts
%{_datadir}/%{name}/utils
%{_initrddir}/%{name}
%{_initrddir}/cmsd
%{_initrddir}/frm_xfrd
%{_initrddir}/frm_purged
%{_initrddir}/xrootd
%{_initrddir}/xrootd.functions
%config(noreplace) %{_sysconfdir}/sysconfig/%{name}
