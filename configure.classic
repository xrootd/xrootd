                     have_already=no
                     for j in $krb4libdir ; do
                        if test "x$found_dir" = "x$j" ; then
                           have_already=yes
                        fi
                     done
                     if test "x$have_already" = "xno" ; then
                        have_already=yes
	                krb4libdir="$krb4libdir $found_dir"
