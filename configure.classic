                enable_krb4=no
	    fi
	fi
    fi

    if test ! "x$enable_krb4" = "xyes" ; then
        krb4incdir=""
        krb4lib=""
        krb4libdir=""
    else
        krb4extracflags="-DR__KRB4"
        havekrb4="krb4"
        xrdsecplugins="XrdSeckrb4 $xrdsecplugins"
    fi
fi

